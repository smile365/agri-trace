# 飞书API配置
# 飞书开放平台API基础URL
FEISHU_API_BASE_URL=https://base-api.feishu.cn

# 主管理员飞书应用配置（用于查询农户列表）
MASTER_APP_TOKEN=your_master_app_token_here
MASTER_PERSONAL_BASE_TOKEN=your_master_personal_base_token_here

# 农户列表表ID（存储所有农户信息的表）
FARMER_LIST_TABLE_ID=your_farmer_list_table_id_here

# Flask应用配置
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 缓存配置
CACHE_TIMEOUT=300  # 缓存超时时间（秒）

# API限流配置
API_RATE_LIMIT=100  # 每分钟最大请求次数

# 安全配置
SECRET_KEY=your_secret_key_here
