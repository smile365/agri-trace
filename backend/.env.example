# 飞书API配置
# 飞书开放平台API基础URL
FEISHU_API_BASE_URL=https://base-api.feishu.cn

# 传感器、 农户管理、饲喂记录、养殖流程 四张表
PERSONAL_BASE_TOKEN=pt-xxxxx
APP_TOKEN=xxxxx

# 多租户系统配置
# 系统管理表（飞书多维表格）访问配置
SYS_APP_TOKEN=xxxxx
SYS_PERSONAL_BASE_TOKEN=pt-xxxxx
SYSTEM_TABLE_NAME=系统管理

# 缓存更新配置 分钟
CACHE_UPDATE_INTERVAL=60


# Flask应用配置
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=8082

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 缓存配置
CACHE_TIMEOUT=300
# Redis缓存数据库路径（相对于项目根目录）
REDIS_DB_PATH=cache.db

# API限流配置
API_RATE_LIMIT=100

